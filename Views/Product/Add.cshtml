@model ProductPortal.Models.ProductViewModel

<h1>Add Product</h1>

<form method="post">
    <div class="mt-3">
        <label class="form-label">ProductID</label>
            <input asp-for="ProductID" class="form-control" />

        <label class="form-label">ProductName</label>
        <input asp-for="ProductName" class="form-control" />

        <label class="form-label">ProductType</label>
        <input asp-for="ProductType" class="form-control" />
  
        <label class="form-label">Price</label>
        <input asp-for="Price" class="form-control" />
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
</form>

