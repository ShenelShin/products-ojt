@model IEnumerable<ProductPortal.Models.Entities.Product>

@{
    // Dynamic title for Beverages
    string currentFilter = "Beverages";
}

<div class="container mt-5">
    <h3 class="mb-3 text-primary">🥤 @currentFilter Products</h3>

    <table class="table table-hover table-striped">
        <thead class="table-primary">
            <tr>
                <th>Product ID</th>
                <th>Product Name</th>
                <th>Product Type</th>
                <th>Price</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td>@product.ProductID</td>
                    <td>@product.ProductName</td>
                    <td>@product.ProductType</td>
                    <td>@product.Price</td>
                </tr>
            }
        </tbody>
    </table>

    <!-- Back Button at Bottom Right -->
    <div class="mt-3 text-end">
        <a asp-controller="Product" asp-action="List" class="btn btn-outline-secondary">
            ⬅ Back to List
        </a>
    </div>
</div>
