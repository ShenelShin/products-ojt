@model IEnumerable<ProductPortal.Models.Entities.Product>

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center rounded-top-4">
            <h3 class="mb-0">Product List</h3>

            <div class="d-flex align-items-center">
                <!-- Filter Dropdown -->
                <select class="form-select form-select-sm me-3" onchange="location = this.value;">
                    <option value="@Url.Action("List")">All</option>
                    <option value="@Url.Action("FilterF")">Food</option>
                    <option value="@Url.Action("FilterB")">Beverages</option>
                </select>

                <!-- Add Product Button -->
                <a class="btn btn-light text-primary shadow-sm rounded-pill px-4"
                   asp-controller="Product" asp-action="Add">
                    Add Product
                </a>
            </div>
        </div>

        <div class="card-body p-4">
            <table class="table table-hover table-striped align-middle">
                <thead class="table-primary">
                    <tr>
                        <th>Product ID</th>
                        <th>Product Name</th>
                        <th>Product Type</th>
                        <th>Price</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var product in Model)
                    {
                        <tr>
                            <td>@product.ProductID</td>
                            <td>@product.ProductName</td>
                            <td>@product.ProductType</td>
                            <td>@product.Price</td>
                            <td class="text-center">
                                <a class="btn btn-sm btn-outline-primary rounded-circle me-2"
                                   asp-controller="Product" asp-action="Edit" asp-route-id="@product.ProductID"
                                   title="Edit">
                                    <i class="bi bi-pencil"></i>
                                </a>

                                <form asp-controller="Product" asp-action="Delete" method="post" style="display:inline;">
                                    <input type="hidden" name="ProductID" value="@product.ProductID" />
                                    <button type="submit" class="btn btn-sm btn-outline-danger rounded-circle"
                                            onclick="return confirm('Are you sure you want to delete this product?');"
                                            title="Delete">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- Back Button at Bottom Right -->
    <div class="mt-3 text-end">
        <a class="btn btn-outline-primary fw-semibold rounded-pill shadow-sm"
           asp-controller="Home" asp-action="index">
            Back
        </a>
    </div>
</div>
