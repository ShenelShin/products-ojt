@model ProductPortal.Models.ProductViewModel

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-header bg-primary text-white text-center rounded-top-4">
                    <h3 class="mb-0">✏️ Edit Product</h3>
                </div>
                <div class="card-body p-4">
                    @if (Model == null)
                    {
                        <p class="text-center text-muted">No product found for this ID</p>
                    }
                    else
                    {
                        <form method="post">
                            <div class="mb-3">
                                <label asp-for="ProductID" class="form-label fw-semibold"></label>
                                <input asp-for="ProductID" class="form-control" readonly />
                            </div>

                            <div class="mb-3">
                                <label asp-for="ProductName" class="form-label fw-semibold"></label>
                                <input asp-for="ProductName" class="form-control" placeholder="Enter product name" />
                            </div>

                            <div class="mb-3">
                                <label asp-for="ProductType" class="form-label fw-semibold"></label>
                                <select asp-for="ProductType" class="form-control">
                                    <option value="">-- Select Product Type --</option>
                                    <option value="Food">Food</option>
                                    <option value="Beverages">Beverages</option>
                                </select>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Price" class="form-label fw-semibold"></label>
                                <input asp-for="Price" class="form-control" placeholder="Enter price" />
                            </div>

                            <div class="text-center">
                                <button type="submit" class="btn btn-prima px-4 py-2 rounded-pill shadow-sm">
                                    💾 Save Changes
                                </button>
                                <a asp-controller="Product" asp-action="List" class="btn btn-outline-secondary px-4 py-2 rounded-pill ms-2">
                                    ⬅ Back
                                </a>
                            </div>
                        </form>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
}

